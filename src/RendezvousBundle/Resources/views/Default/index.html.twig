{% extends "FrontBundle::layout.html.twig" %}
{% block title %}<title>Gestion rendez-vous</title>{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/css/tab.css') }}" rel="stylesheet" />
    <script type="text/javascript" src="{{ asset('assets/js/openTab.js') }}">
        document.getElementById("defaultOpen").click();
    </script>

{% endblock %}

{% block body %}
    <h1>Gestion des rendez-vous</h1>
    <div class="tab">
        <button class="tablinks" onclick="openTab(event, 'NouveauRDV')" id="defaultOpen">Créer un rendez-vous</button>
        <button class="tablinks" onclick="openTab(event, 'HistoRDV')">Planning rendez-vous</button>
    </div>

    <div id="NouveauRDV" class="tabcontent">
        {{ form_start(form) }}
        {{ form_row(form.client) }}<a href={{ path('ajoutclient') }}><button>Nouveau client</button></a>
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>

    <div id="HistoRDV" class="tabcontent">
        <h1>Rechercher un rendez-vous</h1>
        {{ form_start(formRecherche) }}
        {{ form_widget(formRecherche) }}
        {{ form_end(formRecherche) }}
        <h1>Les rendez-vous non effectués</h1>
        <table>
            <tr>
                <th>Date du rendez-vous</th>
                <th>Heure du rendez-vous</th>
                <th>Client</th>
                <th></th>
            </tr>
            {% for rdv in rdvsDuJours %}

                <tr>
                    <td>{{ rdv.date|date("d/m/Y") }}</td>
                    <td>{{ rdv.heure|date('h:m') }}</td>
                    <td>{{ rdv.client.nom }} {{ rdv.client.prenom }}</td>
                    <td><a href={{ path('rendez_vous_details',{'id':rdv.id}) }}><button>Détails</button></a></td>
                </tr>
            {% endfor %}
            {% for rdv in rdvsNonJour %}
                <tr>
                    <td>{{ rdv.date|date("d/m/Y") }}</td>
                    <td>{{ rdv.heure|date('h:m') }}</td>
                    <td>{{ rdv.client.nom }} {{ rdv.client.prenom }}</td>
                    <td><a href={{ path('rendez_vous_details',{'id':rdv.id}) }}><button>Détails</button></a></td>
                </tr>
            {% endfor %}
        </table>

    </div>
{% endblock %}
