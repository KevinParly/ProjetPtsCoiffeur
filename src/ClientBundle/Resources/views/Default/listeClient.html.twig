{% extends "FrontBundle::layout.html.twig" %}
{% block title %}<title>Accueil gestion clients</title>{% endblock %}
{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('assets/css/listeClient.css') }}"
{% endblock %}
{% block body %}
  <div id="mainContainer">
    <div id="asideContainer">
      <h2>Rechercher <br />un client</h2>
        {{ form_start(form,{'attr' : { 'class':'findClientForm' } }) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}

      <h2>Ajouter un client</h2>
      <a href={{ path('ajoutclient') }}>Nouveau client</a>
      <a href={{ path('accueil') }}>Retour Accueil</a>
    </div>
    <div id="listeContainer">
      <h2>Liste des clients</h2>
      <table id="listeClient">
        <tr id="categorieTags">
          <td>Civilité</td>
          <td>Nom</td>
          <td>Prénom</td>
          <td>Jour</td>
          <td>Mois</td>
          <td>Année</td>
          <td></td>
          <td></td>
        </tr>
          {% for client in clients %}
            <tr class="client">
              <td>{{ client.civilite }}</td>
              <td>{{ client.nom }}</td>
              <td>{{ client.prenom }}</td>
              <td>{{ client.jourNaissance }}</td>
              <td>{{ client.moisNaissance }}</td>
              <td>{{ client.anneeNaissance }}</td>
              <td><a href={{ path('details_client',{'id': client.id}) }}>Détails</a><td>
            </tr>
          {% endfor %}
      </table>
    </div>
  </div>
{% endblock %}
